<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.rainbowcat.mapper.ArticleMapper">
    <update id="addViews" parameterType="string">
        update article set now_view = now_view+1  WHERE (id = #{id});
    </update>


    <select id="getBlogsBuUserId" parameterType="string" resultType="top.rainbowcat.entity.Article">
        select * from article where user_id = #{userId}
    </select>
</mapper>
